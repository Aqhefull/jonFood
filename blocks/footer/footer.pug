mixin footer()
  +b.SECTION.footer
    +e.DIV.left-image
      img(src="./img/footer/footer_img_plate_left.png")
    +e.DIV.right-image
      img(src="./img/amazing/amazing_img_plate.png")
    +e.DIV.container
      +e.DIV.container-item
        h3 Take it easy with location
        +e.DIV.container-item-content
          p 112-Legere ancillae vix ne. <br>Te elit putent propriae eum, aliquip nominati 
          p phone: 00 000 000 <br> Email: support@templatemela.com
        +e.DIV.container-item-social
            span(class="mdi mdi-facebook")
            span(class="mdi mdi-google-plus-box")
            span(class="mdi mdi-twitter")
            span(class="mdi mdi-linkedin")
            span(class="mdi mdi-pinterest")
            span(class="mdi mdi-youtube-play")
            span(class="mdi mdi-telegram")
            span(class="mdi mdi-instagram")
      +e.DIV.container-item
        h3 Working Hours
        +e.DIV.container-item-content
          p(style="font-weight: 700;") Monday To Friday
          p 8:00am to 10:00pm(Breakfast)<br>11:00am to 10:00pm(Lunch/Diner)

          p(style="font-weight: 700") Saturday & Sunday
          p 10:00am to 11:00pm(Brunch)<br>11:00am to 12:00pm(Lunch/Dinner)
      +e.DIV.container-item
        h3 Feedback form
        form
          input(type="text" placeholder="Name")
          input(type="Email" placeholder="Email")
          input(type="number" placeholder="Phone")
          textarea(type="text" placeholder="Message" rows="6")
          button(class="btn btn-brown") Submit